<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp">
    <TextView
        android:id="@+id/upgradeName"
        android:text="name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/upgradeLVL"
        android:text="lvl"
        app:layout_constraintTop_toBottomOf="@+id/upgradeName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/space"
        android:text="   "
        app:layout_constraintTop_toBottomOf="@+id/upgradeName"
        app:layout_constraintLeft_toRightOf="@+id/upgradeLVL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/upgradeSpeed"
        android:text="speed"
        app:layout_constraintTop_toBottomOf="@id/upgradeName"
        app:layout_constraintLeft_toRightOf="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/upgradePrice"
        android:text="price"
        app:layout_constraintTop_toBottomOf="@id/upgradeLVL"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>